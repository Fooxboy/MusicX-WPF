<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MusicX.Avalonia.Controls">
    <Style Selector="Border.Card">
        <Setter Property="Padding" Value="12" />
        <Setter Property="CornerRadius" Value="{DynamicResource OverlayCornerRadius}" />
        <Setter Property="BorderThickness" Value="{DynamicResource ThemeBorderThickness}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
        <Setter Property="Background" Value="{DynamicResource ButtonBackgroundDisabled}" />
    </Style>
    <Style Selector="Border.PlaylistCard">
        <Setter Property="CornerRadius" Value="{DynamicResource OverlayCornerRadius}" />
        <Setter Property="BorderThickness" Value="{DynamicResource ThemeBorderThickness}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}" />
    </Style>
    <Style Selector="Border.PlaylistCard controls|BlurryImage#PART_PlaylistBackground">
        <Setter Property="BlurLevel" Value="0" />
        <Setter Property="Transitions">
            <Transitions>
                <FloatTransition Property="BlurLevel" Duration="0:0:0.1" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.PlaylistCard:pointerover controls|BlurryImage#PART_PlaylistBackground">
        <Setter Property="BlurLevel" Value="10" />
    </Style>
    <Style Selector="Border.PlaylistCard Panel#PART_Content">
        <Setter Property="Opacity" Value="0" />
        <Setter Property="Transitions">
            <Transitions>
                <ThicknessTransition Property="Margin" Duration="0:0:0.2" />
                <DoubleTransition Property="Opacity" Duration="0:0:0.2" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Border.PlaylistCard:pointerover Panel#PART_Content">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>
</Styles>