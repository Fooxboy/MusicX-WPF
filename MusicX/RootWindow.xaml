<Window x:Class="MusicX.RootWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicX"
        xmlns:views="clr-namespace:MusicX.Views"
        xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI" xmlns:controls="clr-namespace:MusicX.Controls"
        Loaded="Window_Loaded"
        Style="{StaticResource UiWindow}"
         d:DesignHeight="720" d:DesignWidth="1280"
        mc:Ignorable="d">

    <Window.Resources>
        <FontFamily x:Key="SegoeFluentIcons">pack://application:,,,/;component/Fonts/#Segoe Fluent Icons</FontFamily>
        <Storyboard x:Key="AminationShowPlayer">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="playerControl" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="117"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.8000000" Value="-9">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="playerControl" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-10.5"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.8000000" Value="-4.5">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="HidePlayer">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="playerControl" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="0.058">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="playerControl" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="-500">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="playerControl" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="22.333">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="playerControl" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="00:00:00.6000000" Value="0.78">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuarticEase EasingMode="EaseInOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <Grid Grid.Row="1" Margin="5 10 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <wpfui:NavigationStore Grid.Column="0" x:Name="navigationBar" Margin="0,0,12,0" Frame="{Binding ElementName=RootFrame}" >

            </wpfui:NavigationStore>


        </Grid>

        <Frame x:Name="RootFrame" Margin="73 50 0 0"  Grid.Column="1" Grid.RowSpan="2" />

        <Rectangle Height="60" Opacity="1" Visibility="Collapsed" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.2"/>
                    <GradientStop Color="#00000000" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <wpfui:TitleBar Grid.Row="0" Height="40" ApplicationNavigation="True" />

        <wpfui:SearchBox x:Name="SearchBox" MouseEnter="SearchBox_MouseEnter" MouseLeave="SearchBox_MouseLeave" KeyUp="TextBox_KeyUp" Margin="0 10 0 0" Grid.RowSpan="2" Width="500" VerticalAlignment="Top"  HorizontalAlignment="Center" Placeholder="Поиск музыки, плейлистов, исполнителей" />

        <controls:PlayerControl MouseDoubleClick="playerControl_MouseDoubleClick"  x:Name="playerControl" Visibility="Collapsed" Margin="18,0,12,10" Height="100" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <controls:PlayerControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </controls:PlayerControl.RenderTransform>

        </controls:PlayerControl>
        <wpfui:Button Height="40" Click="Button_Click" BorderThickness="0"  Width="70" Padding="0" HorizontalAlignment="Left" Appearance="Transparent">
            <Button.Content>
                <wpfui:FontIcon Margin="0 0 0 0" FontFamily="Segoe Fluent Icons" Glyph="&#xE0A6;" />
            </Button.Content>
        </wpfui:Button>

    </Grid>
</Window>
