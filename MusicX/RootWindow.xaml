                        </StackPanel>
                    </Grid>
                </ContextMenu>
            </Rectangle.ContextMenu>
        </Rectangle>-->

        <wpfui:SearchBox
            x:Name="SearchBox"
            Grid.RowSpan="2"
            Width="500"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            KeyUp="TextBox_KeyUp"
            MouseEnter="SearchBox_MouseEnter"
            MouseLeave="SearchBox_MouseLeave"
            MouseLeftButtonUp="SearchBox_MouseLeftButtonUp"
            Placeholder="Поиск музыки, плейлистов, исполнителей" />

        <!--<Rectangle Fill="#414141" Grid.ColumnSpan="3" Height="300" Grid.RowSpan="5"  RadiusY="10" RadiusX="10" Width="500" VerticalAlignment="Top" Margin="0 45 0 0">
            <Rectangle.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="0" BlurRadius="20"/>
            </Rectangle.Effect>
        </Rectangle>-->

        <controls:PlayerControl
            x:Name="playerControl"
            Grid.Row="1"
            Height="100"
            Margin="18,0,12,10"
            VerticalAlignment="Bottom"
            MouseDoubleClick="playerControl_MouseDoubleClick"
            RenderTransformOrigin="0.5,0.5"
            Visibility="Collapsed">
            <controls:PlayerControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </controls:PlayerControl.RenderTransform>

        </controls:PlayerControl>

        <wpfui:Snackbar
            x:Name="RootSnackbar"
            Grid.RowSpan="3"
            Grid.ColumnSpan="3"
            MaxWidth="600"
            Margin="0,0,0,40"
            Icon="Info20"
            IsShown="False"
            ShowCloseButton="True"
            Timeout="5000" />

        <wpfui:Button
            Width="70"
            Height="40"
            Padding="0"
            HorizontalAlignment="Left"
            Appearance="Transparent"
            BorderThickness="0"
            Click="Button_Click">
            <Button.Content>
                <wpfui:SymbolIcon Symbol="ArrowLeft32" />
            </Button.Content>
        </wpfui:Button>

    </Grid>
</Window>
