<ui:FluentWindow
    x:Class="MusicX.Views.StartingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Запуск Music X"
    Width="800"
    Height="450"
    Background="#202020"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Opacity="0.7" Stretch="UniformToFill" Source="pack://application:,,,/Assets/newyear/start_show.png"/>


        <Image Height="220" Width="220"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="pack://application:,,,/Assets/newyear/snow_logo.png" />

        <Image Height="100" Width="100" Margin="-190,0,0,120"  Source="pack://application:,,,/Assets/newyear/newyearblock.png"/>


        <ProgressBar IsIndeterminate="True" Grid.Row="1" />
    </Grid>
</ui:FluentWindow>
