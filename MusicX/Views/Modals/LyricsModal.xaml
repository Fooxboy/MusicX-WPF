<Page x:Class="MusicX.Views.Modals.LyricsModal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicX.Views.Modals" xmlns:controls="clr-namespace:MusicX.Controls" xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinWidth="500"
      Height="500"
      Title="Текст песни">

    <Grid Margin="15,15,0,15">

        <wpfui:ProgressRing IsEnabled="True" IsIndeterminate="True" Visibility="{Binding IsLoading, Converter= {StaticResource BooleanToVisibilityConverter}}"/>
        <controls:LyricsControl Height="420" VerticalAlignment="Top" x:Name="LyricsControlView"/>

        <wpfui:Button x:Name="SyncButton" Click="SyncButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content=""/>

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Bottom">
            <TextBlock Opacity="0.6" FontSize="13" Text="{Binding Credits}"/>
        </StackPanel>
    </Grid>
</Page>
