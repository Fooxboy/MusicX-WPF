<Window
    x:Class="MusicX.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:MusicX.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="LoginWindow"
    Width="800"
    Height="450"
    Background="#202020"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <wpfui:TitleBar Height="40" />

        <wpfui:Card
            Width="400"
            Height="300"
            Margin="0,40,0,0">
            <Grid>
                <StackPanel
                    x:Name="loading"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed">
                    <wpfui:ProgressRing
                        Width="60"
                        Height="60"
                        EngAngle="1"
                        IsEnabled="True"
                        IsIndeterminate="True" />
                    <TextBlock
                        Margin="0,5,0,0"
                        FontFamily="{StaticResource VKSansRegular}"
                        Text="Стучусь к серверам ВКонтакте" />
                </StackPanel>

                <StackPanel x:Name="TwoFactorAuth" Visibility="Collapsed">
                    <TextBlock
                        Margin="5,0,5,0"
                        FontFamily="{StaticResource VKSansDemiBold}"
                        FontSize="20"
                        Text="Введите код двухфакторной авторизации"
                        TextWrapping="Wrap" />
                    <TextBox x:Name="Code" Margin="5,20,0,5" />
                    <wpfui:Button
                        x:Name="TwoFactorAccept"
                        Margin="5,40,0,5"
                        Appearance="Secondary"
                        Click="TwoFactorAccept_Click"
                        Content="Подтвердить" />
                </StackPanel>
                <StackPanel x:Name="content" Visibility="Visible">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource VKSansDemiBold}"
                        FontSize="25"
                        Text="Вход в аккаунт ВКонтакте"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="5,20,5,2"
                        FontFamily="{StaticResource VKSansRegular}"
                        Opacity="0.4"
                        Text="Логин" />
                    <TextBox x:Name="Login" />
                    <TextBlock
                        Margin="5,20,5,2"
                        FontFamily="{StaticResource VKSansRegular}"
                        Opacity="0.4"
                        Text="Пароль" />
                    <PasswordBox x:Name="Password" />
                    <wpfui:Button
                        Margin="5,20,5,0"
                        Appearance="Secondary"
                        Click="Button_Click"
                        Content="Войти" />
                </StackPanel>
            </Grid>

        </wpfui:Card>

        <wpfui:Snackbar
            x:Name="RootSnackbar"
            Title="Hello World!"
            Grid.Row="0"
            MaxWidth="600"
            Icon="Info24"
            IsShown="False"
            Message="Remember that the Heat Death of Universe is coming someday, no time to explain - let's go!"
            ShowCloseButton="True"
            Timeout="5000" />

    </Grid>
</Window>
