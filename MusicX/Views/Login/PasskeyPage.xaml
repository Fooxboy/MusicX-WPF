<UserControl x:Class="MusicX.Views.Login.PasskeyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MusicX.Views.Login"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <ui:Card HorizontalAlignment="Center" Width="300">
        <ui:SymbolIcon Symbol="Fingerprint48" FontSize="128" Width="300"
                       HorizontalAlignment="Center">
            <ui:SymbolIcon.Foreground>
                <SolidColorBrush Color="{DynamicResource SystemAccentColor}" />
            </ui:SymbolIcon.Foreground>
        </ui:SymbolIcon>
        <ui:Card.Footer>
            <TextBlock FontFamily="{StaticResource VKSansDemiBold}"
                       TextAlignment="Center"
                       FontSize="24"
                       TextWrapping="Wrap">Используйте всплывающее окно.</TextBlock>
        </ui:Card.Footer>
    </ui:Card>
</UserControl>
