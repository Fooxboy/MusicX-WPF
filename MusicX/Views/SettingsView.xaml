<Page
    x:Class="MusicX.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicX.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
    Title="SettingsView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource UiPageScrollable}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock
                FontFamily="{StaticResource VKSansBold}"
                FontSize="45"
                Foreground="White"
                Text="Настройки" />
            <wpfui:Card Margin="5,10,5,0">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <Rectangle
                            Width="100"
                            Height="100"
                            RadiusX="99"
                            RadiusY="99">
                            <Rectangle.Fill>
                                <ImageBrush x:Name="UserImage" />
                            </Rectangle.Fill>
                        </Rectangle>

                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock
                                Margin="30,0,0,0"
                                FontFamily="{StaticResource VKSansRegular}"
                                FontSize="26"
                                Foreground="White"
                                Text="Привет," />
                            <TextBlock
                                x:Name="UserName"
                                Margin="5,1,0,0"
                                FontFamily="{StaticResource VKSansDemiBold}"
                                FontSize="26"
                                Foreground="White"
                                Text="User Name" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Width="250"
                        Margin="0,14,0,0"
                        HorizontalAlignment="Right">
                        <wpfui:Button
                            x:Name="DeleteAccount"
                            Width="250"
                            Appearance="Secondary"
                            Click="DeleteAccount_Click"
                            Content="Выйти с аккаунта"
                            Icon="PersonDelete16" />
                        <wpfui:Button
                            x:Name="CheckUpdates"
                            Width="250"
                            Margin="0,10,0,0"
                            Appearance="Secondary"
                            Click="CheckUpdates_Click"
                            Content="Проверить обновления"
                            Icon="ArrowSync12" />
                    </StackPanel>



                </Grid>

            </wpfui:Card>


            <TextBlock
                Margin="5,20,0,0"
                FontFamily="{StaticResource VKSansDemiBold}"
                FontSize="30"
                Text="Трансляция активности" />

            <wpfui:Card Margin="5,5,5,0">
                <Grid>
                    <StackPanel HorizontalAlignment="Left">

                        <StackPanel Orientation="Horizontal">
                            <wpfui:ToggleSwitch
                                x:Name="ShowRPC"
                                Checked="ShowRPC_Checked"
                                Unchecked="ShowRPC_Unchecked" />

                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="18"
                                Foreground="White"
                                Text="Показывать трек в Discord " />

                        </StackPanel>


                        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                            <wpfui:ToggleSwitch
                                x:Name="BroacastVK"
                                Checked="BroacastVK_Checked"
                                Unchecked="BroacastVK_Unchecked" />

                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="18"
                                Foreground="White"
                                Text="Показывать трек в статусе ВКонтакте" />

                        </StackPanel>

                    </StackPanel>
                </Grid>
            </wpfui:Card>

            <TextBlock
                Margin="5,20,0,0"
                FontFamily="{StaticResource VKSansDemiBold}"
                FontSize="30"
                Text="Полноэкранный режим"
                Visibility="Collapsed" />

            <wpfui:Card Margin="5,5,5,0" Visibility="Collapsed">
                <Grid>
                    <StackPanel HorizontalAlignment="Left">

                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Margin="5,0,0,0"
                                FontSize="18"
                                Foreground="White"
                                Text="Монитор на котором будет показан полноэкранный режим" />
                            <RadioButton
                                Margin="0,5,0,0"
                                Content="Монитор 1"
                                GroupName="monitor" />
                            <RadioButton
                                Margin="0,5,0,0"
                                Content="Монитор 2"
                                GroupName="monitor" />
                            <RadioButton
                                Margin="0,5,0,0"
                                Content="Монитор 3"
                                GroupName="monitor" />

                        </StackPanel>

                    </StackPanel>
                </Grid>
            </wpfui:Card>


            <TextBlock
                Margin="5,20,0,0"
                FontFamily="{StaticResource VKSansDemiBold}"
                FontSize="30"
                Text="Логи" />

            <wpfui:Card Margin="5,5,5,0">
                <Grid>
                    <StackPanel HorizontalAlignment="Left">

                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                            <TextBlock FontSize="18" Text="Занято места: " />
                            <TextBlock
                                x:Name="MemoryLogs"
                                FontSize="18"
                                Opacity="0.6"
                                Text="136" />
                            <TextBlock
                                x:Name="MemoryType"
                                FontSize="18"
                                Opacity="0.6"
                                Text="КБ" />

                        </StackPanel>

                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                            <wpfui:Button
                                x:Name="OpenLogs"
                                Width="180"
                                Appearance="Secondary"
                                Click="OpenLogs_Click"
                                Content="Открыть папку" />
                            <wpfui:Button
                                x:Name="RemoveLogs"
                                Width="180"
                                Margin="10,0,0,0"
                                Appearance="Secondary"
                                Click="RemoveLogs_Click"
                                Content="Очистить" />
                            <wpfui:Button
                                Width="180"
                                Margin="10,0,0,0"
                                Appearance="Secondary"
                                Content="Отправить"
                                IsEnabled="False" />

                        </StackPanel>

                    </StackPanel>
                </Grid>
            </wpfui:Card>




            <TextBlock
                Margin="5,20,0,0"
                FontFamily="{StaticResource VKSansDemiBold}"
                FontSize="30"
                Text="Информация о Music X" />

            <wpfui:Card Margin="5,5,5,120">
                <Grid>
                    <StackPanel HorizontalAlignment="Left">


                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                            <TextBlock FontSize="18" Text="Версия приложения: " />
                            <TextBlock
                                x:Name="VersionApp"
                                FontSize="18"
                                Opacity="0.6"
                                Text="1.0 beta" />

                        </StackPanel>

                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                            <TextBlock FontSize="18" Text="Сборка от: " />
                            <TextBlock
                                x:Name="BuildDate"
                                FontSize="18"
                                Opacity="0.6"
                                Text="26 марта 2022" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="18"
                            Text="Полезные ссылки:" />

                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                            <wpfui:Button
                                x:Name="TelegramButton"
                                Width="100"
                                Appearance="Secondary"
                                Click="TelegramButton_Click"
                                Content="Телеграм" />
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </wpfui:Card>

        </StackPanel>
    </Grid>
</Page>
