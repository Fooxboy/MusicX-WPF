<UserControl
    x:Class="MusicX.Controls.Blocks.PlaceholderBlockControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MusicX.Controls.Blocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="PlaceholderBlock">

        <wpfui:Card>
            <StackPanel>
                <Image Height="110" Width="110" x:Name="Icon"/>

                <TextBlock x:Name="Title" HorizontalAlignment="Center" FontSize="25" FontFamily="{StaticResource VKSansBold}"/>
                <TextBlock x:Name="Text" FontSize="16" Margin="0 20 0 0" Foreground="#AAAAAA" HorizontalAlignment="Center"/>

                <wpfui:Button x:Name="ActionButton" Width="300" HorizontalAlignment="Center" Appearance="Secondary" Margin="0 20 0 0" Click="ActionButton_Click"/>
            </StackPanel>
        </wpfui:Card>
       
    </Grid>
</UserControl>
