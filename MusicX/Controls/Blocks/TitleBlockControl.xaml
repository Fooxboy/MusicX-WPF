<UserControl x:Class="MusicX.Controls.Blocks.TitleBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicX.Controls.Blocks"
             mc:Ignorable="d" 
             xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
             
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0 0 10 13" HorizontalAlignment="Stretch" x:Name="TitleBlock" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <TextBlock FontFamily="{StaticResource VKSansDemiBold}" FontWeight="DemiBold" Text="Title block" Foreground="White" x:Name="Title" FontSize="30"/>
            <TextBlock FontSize="20" Visibility="Collapsed" VerticalAlignment="Center" Margin="10 5 0 0" Text="123" x:Name="BadgeHeader" Grid.Column="0" Foreground="White" Opacity="0.3"/>
        </StackPanel>

        <Grid Grid.Column="2" x:Name="ButtonsGrid" HorizontalAlignment="Right" Width="170" Height="30" Visibility="Collapsed"  Margin="0 0 5 0">
            <TextBlock x:Name="TitleButtons" Foreground="White" Margin="10 5 0 0" Text="brr"/>

            <ComboBox Grid.Column="1" Background="Transparent" Foreground="White" VerticalContentAlignment="Center" BorderBrush="#424242"    x:Name="Buttons">

            </ComboBox>


        </Grid>
        

        <wpfui:Button Grid.Column="1" FontFamily="{StaticResource VKSansDemiBold}" Click="MoreButton_Click" Visibility="Collapsed" x:Name="MoreButton" Appearance="Secondary" Margin="0 0 5 0" HorizontalAlignment="Right" Height="30" Width="100" Padding="0" />

    </Grid>
</UserControl>
