<UserControl x:Class="MusicX.Controls.LongreadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicX.Controls" xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <wpfui:Card>
            <Grid>
                <Image Stretch="UniformToFill" x:Name="BackgrondImage"/>
                <Rectangle Fill="Black" Opacity="0.5"  />
                <StackPanel HorizontalAlignment="Center" Margin="0 20 0 0" VerticalAlignment="Center">
                    <TextBlock Foreground="White" HorizontalAlignment="Center" FontSize="19" FontFamily="{StaticResource VKSansDemiBold}" x:Name="Title" Text="Заголовок"/>
                    <wpfui:Button Margin="0 20 0 0" Width="150" x:Name="OpenButton" Content="Открыть" Appearance="Secondary" Icon="Link12"/>
                </StackPanel>
            </Grid>
        </wpfui:Card>
    </Grid>
</UserControl>
