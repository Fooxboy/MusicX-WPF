<UserControl x:Class="MusicX.Controls.TrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicX.Controls"
             mc:Ignorable="d" 
             xmlns:controls="clr-namespace:WPFUI.Controls;assembly=WPFUI"
             
             Loaded="UserControl_Loaded"
             MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseDown="Grid_MouseDown" HorizontalAlignment="Stretch">
        <TextBlock Background="Transparent"/>

        <controls:Card  x:Name="Card" Visibility="Visible" Margin="0 0 10 0"/>

        <Grid HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Grid Margin="6">

                    <Rectangle  Height="45" Width="45" Grid.Row="0" Fill="Black" Opacity="0.1" RadiusX="5" RadiusY="5"/>
                    <controls:FontIcon Height="45" Width="45" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe Fluent Icons" Glyph="&#xEC4F;" />

                    
                    
                    <Rectangle Height="45" RadiusX="3" RadiusY="3" Width="45">
                        <Rectangle.Fill>
                            <ImageBrush  x:Name="Cover"  Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Grid x:Name="PlayButtons" Visibility="Collapsed">
                        <Rectangle Height="45" Width="45" RadiusX="3" Fill="Black" RadiusY="3" Opacity="0.6"/>
                        <controls:FontIcon FontSize="19" FontFamily="Segoe Fluent Icons" Glyph="&#xE102;" />
                    </Grid>

                </Grid>
                <Grid x:Name="ChartGrid" Visibility="Collapsed">
                    <Rectangle Height="25" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.2" Width="25" RadiusX="100" RadiusY="100"/>
                    <TextBlock x:Name="ChartPositionText" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontWeight="ExtraBlack"  Text="1"/>
                </Grid>
                <StackPanel Margin="5 0 0 0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Foreground="White" FontWeight="DemiBold" FontSize="16" x:Name="Title" Text="Title"   TextTrimming="CharacterEllipsis" />
                        <TextBlock Foreground="White" x:Name="Subtitle" Margin="5 3 0 0" Text="Subtitle" Opacity="0.3" TextTrimming="CharacterEllipsis" />

                    </StackPanel>
                    <TextBlock Foreground="White" MouseEnter="Artists_MouseEnter" MouseLeave="Artists_MouseLeave" MouseLeftButtonDown="Artists_MouseLeftButtonDown" Margin="0 2 0 0" x:Name="Artists" Text="Artist" FontSize="11" Opacity="0.6"   TextTrimming="CharacterEllipsis" />

                </StackPanel>
            </StackPanel>

            <TextBlock Foreground="White" Opacity="0.5" x:Name="Time" HorizontalAlignment="Right"  Grid.Column="1" VerticalAlignment="Center" Margin=" 0 0 20 0 " Text="02:20"/>
        </Grid>
       

    </Grid>
</UserControl>
