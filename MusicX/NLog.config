<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  autoReload="true"
		  internalLogLevel="Info">

		<!-- the targets to write to -->
		<targets>
			<!-- write logs to file  -->
			<target xsi:type="File" name="allfile" fileName="log-${shortdate}.log"
					layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${message}" />

			<target xsi:type="File" name="debug" fileName="log-debug-${shortdate}.log"
					layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${message} ${exception:format=tostring}" />
			<target xsi:type="File" name="error" fileName="log-error-${shortdate}.log"
					layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${message} ${exception:format=ToString,StackTrace}" />
		</targets>

		<!-- rules to map from logger name to target -->
		<rules>
			<!--All logs, including from Microsoft-->
			<logger name="*" level="Trace,Info,Error,Fatal" writeTo="allfile" />
			<logger name="*" level="Debug" writeTo="debug" />
			<logger name="*" level="Error" writeTo="error" />
		</rules>
	</nlog>

</configuration>