<Application
    x:Class="MusicX.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MusicX"
    xmlns:convertes="clr-namespace:MusicX.Converters"
    StartupUri="Views/StartingWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/Theme/Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WPFUI;component/Styles/WPFUI.xaml" />
                <ResourceDictionary x:Name="ListViewStyles" Source="Styles/ListViewStyles.xaml" />
                <ResourceDictionary x:Name="ListViewStyles" Source="Styles/SliderStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="SegoeFluentIcons">pack://application:,,,/;component/Fonts/#Segoe Fluent Icons</FontFamily>
            <FontFamily x:Key="VKSansDemiBold">./Fonts/VKSansDisplay-DemiBold.ttf#VK Sans Display DemiBold</FontFamily>
            <FontFamily x:Key="VKSansMedium">./Fonts/VKSansDisplay-Medium.ttf#VK Sans Display Medium</FontFamily>
            <FontFamily x:Key="VKSansBold">./Fonts/VKSansDisplay-Bold.ttf#VK Sans Display Bold</FontFamily>
            <FontFamily x:Key="VKSansRegular">./Fonts/VKSansDisplay-Regular.ttf#VK Sans Display Regular</FontFamily>

            <convertes:ListToVisibilityConverter x:Key="ListToVisibilityConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>
